@model IEnumerable<_30Code.Models.Curso>

<div class="mt-2 container">
<h2>Cursos</h2>
    <img src="~/Images/1.jpg" class="container" alt="#" />
    <div class="row mt-3">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 mt-1">
                <div class="card">
                    <img class="card-img-top img-fluid" src="http://placehold.it/180x100" alt="Imagem de capa do card">
                    <div class="card-body">
                        <p class="card-text">
                            @Html.ActionLink(Convert.ToString(@Html.DisplayFor(modelItem => item.Nome)), "Index")
                            Um exemplo de texto rápido para construir o título do card e fazer preencher o conteúdo do card.
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

